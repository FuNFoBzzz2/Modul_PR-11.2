<Page x:Class="Borisov_pr_3.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Borisov_pr_3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="358" Margin="260,0,0,0" VerticalAlignment="Top" Width="274">
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="tbName"/>
            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="tbFName"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="tbLogin"/>
            <TextBlock Text="Пароль:"/>
            <TextBox x:Name="tbPassword"/>
            <TextBlock Text="Группа:"/>
            <TextBox x:Name="tbIDGroup"/>
            <StackPanel Orientation="Horizontal" Height="53" HorizontalAlignment="Center" Width="130" Margin="72,0">
                <Button x:Name="btnSign" Content="создать"  Click="btnSign_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
