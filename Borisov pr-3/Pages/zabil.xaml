<Page x:Class="Borisov_pr_3.Pages.zabil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Borisov_pr_3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="zabil">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="270,54" Width="200">
            <TextBlock x:Name="txtLoginText" Text="Логин"/>
            <TextBox x:Name="txtLogin" Text=""/>
            <TextBlock x:Name="txtEmailText" Text="Почта"/>
            <TextBox x:Name="txtEmail" Text=""/>
            <TextBlock x:Name ="txtKodText" Text="Введите код подтверждения"/>
            <TextBox x:Name="txtKod" TextChanged="txtKod_TextChanged"/>

            <StackPanel Orientation="Horizontal" Height="52" HorizontalAlignment="Center">
                <Button x:Name="btnEnter" Margin="5,10,5,5" Content="Отправить" Click="btnEnter_Click_1"/>

            </StackPanel>
        </StackPanel>
        <TextBlock x:Name="TimerBlock" HorizontalAlignment="Left" Margin="320,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Red"/>

    </Grid>
</Page>
